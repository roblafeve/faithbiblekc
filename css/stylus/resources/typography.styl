// Typography //

body
	font 				100%/1.5 		'OpenSansRegular', Helvetica, Arial, sans-serif
	-webkit-font-smoothing antialiased

h1
	font 				2.25em/1.3 		'OpenSansLight', Helvetica, Arial, sans-serif
	padding 			0.6875em 0 0
	margin 				0

h2
	font 				1.8em/1.3 		'OpenSansLight', Helvetica, Arial, sans-serif
	padding				0.85em 0 0
	margin				0

h3
	font 				1.25em/1.34 	'OpenSansSemiBold', Helvetica, Arial, sans-serif
	padding				1.2em 0 0
	margin				0

h4
	font 				1.152em/1.67	'OpenSansLightItalic', Helvetica, Arial, sans-serif
	padding				1.35em 0 0
	margin				0

h5
	font 				1em/1.77		'OpenSansSemibold', Helvetica, Arial, sans-serif
	padding				1.5em 0 0
	margin				0

h6
	font 				0.8em/1.90		'OpenSansRegular', Helvetica, Arial, sans-serif
	padding				1.875em 0 0
	margin				0
	text-transform		uppercase

// Header Groups //

hgroup
	margin				1.5em 0
	& > * + *
		padding			0
		margin			0 !important
		
ul, ol
	li:first-child
		hgroup
			margin-top			0
	li:last-child
		hgroup
			margin-bottom		0

// Basic Block-Level Text Element Styles //

p, ul, ol, pre, td, th, blockquote
	margin 1.5em 0

// Global Lists //

ul, ol

	list-style-position			inside

// Typographical Lists //

.content
	ul
		list-style-type			disc
	ol
		list-style-type			decimal
	ul, ol
		list-style-position		outside
		padding					0 0 0 1.5em
		li
			&:first-child > *:first-child
				margin-top		0
			&:last-child > *:last-child
				margin-bottom	0
	ol li > ol, ul li > ol
		list-style-type			lower-alpha
	ol li > ol li > ol, ul li > ol li > ol
		list-style-type			lower-roman

// Blockquotes //

blockquote p
	@extend				h4
	position			relative
	padding				0 1.5em 0 1.5em
	&:before, &:after
		position		relative
		font-family		georgia
		font-size		2em
		line-height		0
		color			lighten(blue, 30)
	&:before
		content			'“'
		top				0.3em
		left			-0.5em
		margin			0 -0.4em 0 0
	&:after
		content			'”'
		right			-0.1em
		bottom			-0.3em

// Inline Text Element Styles

strong
	font-family			'OpenSansSemiBold', Helvetica, Arial, sans-serif
	font-weight			normal

em
	font-family			'OpenSansItalic', Helvetica, Arial, sans-serif
	font-style			normal

small
	font 				0.75em/1.5 		'OpenSansRegular', Helvetica, Arial, sans-serif

a 
	color               blue
	text-decoration     none

	&.secondary-link
		line-height		2.4em
		~ .secondary-link
			margin-left 	1.5em

// User Content list styles

ul.list-unstyled
	list-style-position			inside
	list-style					none
	padding						0