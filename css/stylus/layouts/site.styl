*
	padding							0
	margin							0
	box-sizing					border-box

body
	position						relative
	background					gray

	// Sliding stuff

	header nav, 
	#main
		transform					translate3d(0,0,0)
		transition				left 0.2s ease-out

	&.slide-right
		header nav, 
		#main
			left						80%
	&.slide-left
		header nav, 
		#main
			left						-80%

header
	z-index							2
	position						fixed
	top									0
	width								100%
	height							1px

	// nav slides
	nav
		position					relative
		top								0
		left							0
		width							100%
		height						50px


#main-wrapper
	z-index							0
	position						absolute
	width								100%
	height							auto
	overflow						hidden
	pointer-events			none

// content slides
#main
	z-index							1
	position						relative
	width								100%
	padding-top					60px
	padding-bottom			300%
	margin-bottom				-300%
	background					white
	pointer-events			initial
	overflow						hidden

#mobile-menus
	z-index							-2
	position						fixed
	width								50%
	overflow						auto

//// Determines maximum content width ////

header nav, #main
	max-width						64em
	padding-right				3em
	padding-left				3em
	margin-right				auto
	margin-left					auto
	clearfix()
	@media							(max-width: 768px)
		padding-right			0.5em
		padding-left			0.5em
	@media							(max-width: 640px)
		padding-right			0.5em
		padding-left			0.5em

//// Contains grid elements ////

.inner
	row(12)
	clearfix()