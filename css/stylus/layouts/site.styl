// Site-Wide Layouts //

body
	background-color			mobile-menu-bg

#page-position
	position					absolute
	transition					margin-left 0.15s ease-in-out
	top							0
	left						0
	width						100%
	height						100%
	margin-left					0
	background-color			footer-bg
	border-radius				mobile-radius
	@media						(max-width: 768px)
		background-color		main-bg
	
	&.menu-open
		transition				margin-left 0.15s ease-in-out
		@media					(max-width: 768px)
			margin-left			-50%
		@media					(max-width: 640px)
			margin-left			-80%

#page-wrapper
	height						100%
	border-radius				mobile-radius
	overflow					auto
	box-shadow					0 0 10px 0 #000
			


//// Determines maximum content width ////

.outer
	max-width					64em
	padding						0 3em
	margin						0 auto
	clearfix()
	@media						(max-width: 768px)
		padding					0 0.875em
	@media						(max-width: 640px)
		padding					0 0.875em

//// Contains grid elements ////

.inner
	row(12)
	clearfix()