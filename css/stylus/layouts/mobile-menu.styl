// Mobile Menu

#mobile
	z-index						-1
	position					fixed
	top							0
	left						0
	width						100%
	height						100%
	overflow-y					auto
	background-color			mobile-menu-bg

	a
		-webkit-tap-highlight-color rgba(0,0,0,0)

	&.open-right
		> *:first-child
			display				block
			width				100%

	&.open-left
		> *:nth-child(2)
			@media				(max-width: 768px)
				display			block
				width			50%
				margin-left		50%
			@media				(max-width: 640px)
				display			block
				width			80%
				margin-left		20%

	ul
		display					none
		transition				all 0.15s ease-in-out
		position				relative
		width					100%
		margin					0
		overflow				hidden
		float					left
		text-align				left
		border-top				0.0625em solid darken(mobile-menu-bg, 5)
		border-bottom			0.0625em solid lighten(mobile-menu-bg, 5)
		clearfix()
		li
			border-top			0.0625em solid lighten(mobile-menu-bg, 5)
			border-bottom		0.0625em solid darken(mobile-menu-bg, 5)
			a
				display			block
				@extend			h6
				padding			0.875em 1.5em
				margin			0
				color			lighten(mobile-menu-bg, 60)

				&:hover
					background	darken(mobile-menu-bg, 1)
