// Header //

#header-wrapper
	overflow					hidden
	position					fixed
	width 						100%
	box-shadow					0 1px 1px 0 rgba(#000, 0.1)

header
	padding						0 0
	background-color			header-bg
	border-top					1px solid highlight
	border-bottom				1px solid lowlight
	@media						(max-width: 640px)
		z-index					1
		position				relative
		width					100%
		border-radius			mobile-radius mobile-radius 0 0

#header-logo
	column(2)
	@media						(max-width: 768px)
		column(4)
		offset(4)

	a
		display					block
		height					1.5em
		margin					0.8em 0
		background				url('../img/logo.svg') no-repeat
		background-position		left center
		background-size			contain
		overflow				hidden
		text-indent				-500%
		color					transparent
		@media					(max-width: 768px)
			background-position	center center

#header-menu
	display						none
	@media						(min-width: 769px)
		display					visible
		column(10)
		margin-top				0.8em
		margin-bottom			0.8em
		clearfix()

		li
			float				left
			margin				0 0 0 2.5em
			
			a
				@extend			h6
				padding			0
				color			black
				letter-spacing	0.1em

			&.current-menu-item a
				color			red

#mobile-menu-toggle
	display						none
	@media						(max-width: 768px)
		column(3)
		offset(1)
		font-family				'EntypoRegular'
		font-size				3.75em
		line-height				0.575em
		color					black
		text-align				right

#mobile-menu
	z-index						-1
	position					fixed
	top							0
	left						0
	width						100%
	height						100%
	overflow-y					auto
	background-color			mobile-menu-bg

	ul
		position				relative
		top						0
		left					0
		text-align				right
		margin					1.5em