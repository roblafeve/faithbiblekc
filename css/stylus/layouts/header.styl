// Header //

#header-wrapper
	z-index						1
	position					fixed
	width 						100%

header
	position					relative
	width						100%
	background-color			rgba(header-bg, 0.98)
	border-top					1px solid highlight
	border-bottom				1px solid darken(lowlight, 10)
	box-shadow					0 2px 1px 0 rgba(#000, 0.05)
	@media						(max-width: 768px)
		border-radius			mobile-radius mobile-radius 0 0

#header-logo
	column(2)
	@media						(max-width: 768px)
		column(4)
		offset(4)

	a
		display					block
		height					1.5em
		margin					0.8em 0
		background				url('../img/logo.svg') no-repeat
		background-position		left center
		background-size			contain
		overflow				hidden
		text-indent				-500%
		color					transparent
		@media					(max-width: 768px)
			background-position	center center

#header-menu
	column(10)
	margin-top					0.8em
	margin-bottom				0.8em
	clearfix()
	@media						(max-width: 768px)
		display					none

	li
		float				left
		margin				0 0 0 2.5em
		
		a
			@extend			h6
			padding			0
			color			black
			letter-spacing	0.1em

		&.current-menu-item a
			color			red

#mobile-menu-toggle
	display						none
	@media						(max-width: 768px)
		column(3)
		offset(1)
		font-family				'EntypoRegular'
		font-size				3.75em
		line-height				0.575em
		color					black
		text-align				right